#include<stdio.h>
main()
{
  int n1,n2,ch,sum,sub,mul,div;
  printf("enter 2 num\n");
  scanf("%d%d",&n1,&n2);
  printf("enter the choice\n");
  fflush(stdin);
  scanf("%c",&ch);
  if(ch=='+')
  {
   sum=n1+n2;
   printf("addition=%d",sum);

  }
  else if(ch=='-')
  {
    sub=n1-n2;
    printf("substraction=%d",sub);

    }
    else if(ch=='*')
  {
    mul=n1*n2 ;
    printf("muiltiplication=%d",mul);
    }
    else if(ch=='/')
  {
    div=n1/n2;
    printf("division=%d",div);
    }
    else
    printf("invalid choice");

  }
